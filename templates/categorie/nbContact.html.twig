{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block body %}
<h1 class="text-center pt-3 pb-5">Statistiques des categories</h1>

{% set total = 0 %}

<table class="table table-hover">
  <thead class="table table-active">
    <tr>
      <th scope="col-8">Libelle categorie</th>
      <th scope="col">Nombre de contact</th>
    </tr>
  </thead>
  <tbody>
  {% for categorie in categories %}
    <tr>
      <th scope="row">{{ categorie.libelle }}</th>
      <td>{{ categorie.nbContact }}</td>
    </tr>
  {% set total = total + categorie.nbContact %}

  {% endfor %}
  
  </tbody>
  <tfoot class="table table-dark">
       <tr> 
            <th scope="row"> Total </th>
            <td> {{ total }} </td> 
       </tr> 
  </tfoot>
</table>
       

{% endblock %}
